<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".statistic.TestActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_container">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".statistic.TestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#CBDDC3"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:clickable="false"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statistic"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:background="#F1FAFA"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="learn about your most frequent moods:"
            android:textAlignment="center"
            android:textColor="#111111"
            android:textSize="20sp" />

        <edu.neu.numad22sp_bdd_project.statistic.ColumnBarChartView
            android:id="@+id/columnBarChartView"
            android:layout_margin="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/border">
        </edu.neu.numad22sp_bdd_project.statistic.ColumnBarChartView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="learn about your favorite activity:"
            android:textAlignment="center"
            android:textColor="#111111"
            android:textSize="20sp" />

        <edu.neu.numad22sp_bdd_project.statistic.Pie
            android:id="@+id/pieChartView"
            android:layout_margin="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/border">
        </edu.neu.numad22sp_bdd_project.statistic.Pie>

    </LinearLayout></LinearLayout></FrameLayout>